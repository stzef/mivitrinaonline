
container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python mivitrinaonline/manage.py migrate --noinput"
    leader_only: true
  03_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python mivitrinaonline/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "mivitrinaonline.settings"
    "PYTHONPATH": "/opt/python/current/app/mivitrinaonline:$PYTHONPATH"
    "ALLOWED_HOSTS": ".elasticbeanstalk.com"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: mivitrinaonline/mivitrinaonline/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/static/"
packages:
  yum:
    git: []
    postgresql93-devel: []
    libjpeg-turbo-devel: []
